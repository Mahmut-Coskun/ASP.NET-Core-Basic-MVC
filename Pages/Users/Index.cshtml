@page
@model CRUDApp.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h4>List of Users</h4>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table id="myTable" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-warning">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-success">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        let table = new DataTable('#myTable');
    });
</script>
